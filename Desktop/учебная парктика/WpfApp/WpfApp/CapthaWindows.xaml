<Window x:Class="WpfApp.CapthaWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="CapthaWindows" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid x:Name="CaptchaImage"  Width="450" Height="250"/>
        <TextBox Name="CaptchaTb" Grid.Row="1" VerticalAlignment="Center" FontSize="30" Width="300"/>
        <Button Name="CheckCaptcha" Click="CheckCaptcha_Click" Content="Проверить" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" />
    </Grid>
</Window>
